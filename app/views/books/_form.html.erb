<%= simple_form_for(@book, html: {class: "form-group"}) do |f| %>
  <%= f.error_notification %>
  <div class="right-inner-addon">
    <i class="glyphicon glyphicon-book"></i>
    <%= f.input :name, required: true, label: false, placeholder: "Name", input_html: {class: "form-control input-lg"} %>
  </div>
  <div class="right-inner-addon">
    <i class="glyphicon glyphicon-user"></i>
    <%= f.input :author, required: true, label: false, placeholder: "Author's Name", input_html: {class: "form-control input-lg"} %>
  </div>
  <div class="right-inner-addon">
    <i class="glyphicon glyphicon-edit"></i>
    <%= f.input :description, required: true, label: false, placeholder: "Description", input_html: {class: "form-control input-lg", rows: 5} %>
  </div>
    <br>
  <div class="right-inner-addon">
    <i class="glyphicon glyphicon-usd"></i>
    <%= f.input :price, required: true, label: false, placeholder: "Price", input_html: {class: "form-control input-lg"} %>
  </div>
   <div class="checkbox text-center">
   <p>Availability</p>
   <%= f.input :availability, required: false, label: false %>
   </div>
    <%= f.button :submit, class: "btn btn-primary btn-block" %>
<% end %>
