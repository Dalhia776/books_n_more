<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-group" }) do |f| %>
  <%= f.error_notification %>
<h2 class="text-center">Forgot your password?</h2>
  <div class="right-inner-addon">
    <i class="glyphicon glyphicon-envelope"></i>
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder:"Email", input_html: {class: "form-control input-lg"} %>
  </div>

    <%= f.button :submit, "Reset Password", class: "btn btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
