<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-group"}) do |f| %>
  <%= f.error_notification %>

<h2 class="text-center">Sign Up</h2>

  <div class="right-inner-addon">
    <i class="glyphicon glyphicon-envelope"></i>
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder:"Email", input_html: {class: "form-control input-lg"} %>
  </div>

  <div class="right-inner-addon">
    <i class="glyphicon glyphicon-lock"></i>
  <%= f.input :password, required: true, label: false, placeholder:"Password", input_html: {class: "form-control input-lg"} %>
  </div>

  <div class="right-inner-addon">
    <i class="glyphicon glyphicon-lock"></i>
  <%= f.input :password_confirmation, required: true, label: false, placeholder:"Confirm Password", input_html: {class: "form-control input-lg"} %>
  </div>

    <%= f.button :submit, "Sign Up", class: "btn btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
