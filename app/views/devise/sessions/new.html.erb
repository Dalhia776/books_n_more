<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-group"}) do |f| %>

<h2 class="text-center">Log In</h2>

  <div class="right-inner-addon">
    <i class="glyphicon glyphicon-envelope"></i>
    <%= f.input :email, required: false, autofocus: true, label: false, placeholder:"Email", input_html: {class: "form-control input-lg"} %>
  </div>

  <div class="right-inner-addon">
    <i class="glyphicon glyphicon-lock"></i>
  <%= f.input :password, required: false, label: false, placeholder:"Password", input_html: {class: "form-control input-lg"} %>
  </div>

    <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
